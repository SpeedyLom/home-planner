{% extends 'soft-ui-base.html.twig' %}

{% block title %}{{ assignment.getTitle() }}{% endblock %}

{% block body %}
    <h1>{{ assignment.getTitle() }}</h1>
    <div class="row">
        <div class="col">
            <h4>Instructions</h4>
            <p>{{ assignment.getInstructions() }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Due date</h4>
            <p>{{ assignment.getDueDate().format('d/m/Y') }}</p>
        </div>
    </div>
{% endblock %}
