{% extends 'soft-ui-base.html.twig' %}

{% block title %}Family members{% endblock %}

{% block body %}
    <h1>Family members</h1>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" href="{{ path('family_member_add') }}" role="button"><i class="fa-solid fa-user-plus"></i> Add</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for family_member in family_members %}
                    <tr>
                        <td>
                            {{ family_member.getName() }}
                        </td>
                        <td class="text-end">
                            <a href="{{ path('family_member_view', {id: family_member.getId()}) }}" role="button" class="btn btn-primary">
                                <i class="fa-solid fa-circle-info"></i> View
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
